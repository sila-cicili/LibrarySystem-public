@model IEnumerable<LibrarySystem.Models.Request>

@{
    ViewData["Title"] = "Taleplerim";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">üìú Taleplerim</h3>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <h5>Hen√ºz hi√ß kitap talebiniz yok. ü§∑‚Äç‚ôÇÔ∏è</h5>
                    <p>K√ºt√ºphaneden istediƒüiniz kitabƒ± talep edebilirsiniz.</p>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-outline-primary">üìö Kitaplara Git</a>
                </div>
            }
            else
            {
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Kitap Adƒ±</th>
                            <th>Talep Tarihi</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.Book?.Title</td>
                                
                                <td>
                                    @if (item.RequestDate.HasValue)
                                    {
                                        @item.RequestDate.Value.ToString("dd.MM.yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>

                                <td>
                                    @if (item.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">‚è≥ Bekliyor</span>
                                    }
                                    else if (item.Status == "Approved")
                                    {
                                        <span class="badge bg-success">‚úÖ Onaylandƒ±</span>
                                    }
                                    else if (item.Status == "Rejected")
                                    {
                                        <span class="badge bg-danger">‚ùå Reddedildi</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>